<div class="map-panel">
    <table class="map-panel--map"></table>
    {{#animated}}
        <div class="map-panel--move"></div>
        <div class="map-panel--shot"></div>
        {{#touch}}
            <div class="map-panel--move-controls">
                <p>
                    <span id="topControl">▲</span>
                </p>
                <p>
                    <span id="leftControl">◀</span>
                    &nbsp;
                    <span id="rightControl">▶</span>
                </p>
                <p>
                    <span id="bottomControl">▼</span>
                </p>
            </div>
            <div class="map-panel--shot-control"></div>
        {{/touch}}
    {{/animated}}
</div>
